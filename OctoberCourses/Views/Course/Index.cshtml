@model IEnumerable<OctoberCourses.Models.Courses>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Course</title>
</head>
<body>
    <h1>Course List</h1>
    @foreach (var courses in Model)
    {
        <p><a href="/Course/Details/@courses.Id">Title: <span>@courses.Name</span></a></p>
        <p>Description: <span>@courses.Description</span></p>
        <hr />
    }

</body>
</html>
